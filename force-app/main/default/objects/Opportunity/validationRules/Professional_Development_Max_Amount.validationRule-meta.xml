<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Professional_Development_Max_Amount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Type, &apos;Professional Development&apos;),
    Amount &gt; 5000
)</errorConditionFormula>
    <errorMessage>Maximum amount requested is $5,000 for a Professional Development grant</errorMessage>
</ValidationRule>
