<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Institutional_Impact_Max_Amount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Type, &apos;Institutional Impact&apos;),
    Amount &gt; 1000000
)</errorConditionFormula>
    <errorMessage>Maximum amount requested is $1,000,000 for an Institutional Impact grant</errorMessage>
</ValidationRule>
